.wrap{
  background-color: #00ffff;
  position: fixed;
  width: 100%;
  padding-bottom: 4rpx;
}
.search{
  display: flex;
  flex-direction: row;
  background-color:white;
  justify-content: center;
  border-radius: 24rpx;
  margin-bottom: 10rpx;
  margin-left: 12rpx;
  width: 97%;
}
.input{
  width:90%;
  font-size: 24rpx;
  line-height: 100%;
  margin-right: 6rpx;
}
.search image{
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  margin-top:10rpx;
}
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-top: 66rpx;
}
.product{
  display:flex;
  flex-direction: row;
}
.product image{
  width: 150rpx;
  height: 150rpx;
  margin: 6rpx 10rpx;
  border-radius: 12rpx;
}
.product_info{
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-left: 6rpx;
  font-size: 30rpx;
}
.price{
  color:#ff4713;
}