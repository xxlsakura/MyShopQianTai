.title{
  display: block;
  text-align: center;
  font-size:50rpx;
  font-weight: 500;
  margin:10rpx 0;
}
scroll-view{
  width: 100%;
  height:100vh;
}
swiper{
  width:96%;
  height:490rpx;
  margin: 0 16rpx;
}
swiper video,image{
  width:100%;
}

.info{
  width:96%;
  margin: 0 16rpx;
  display: flex;
  justify-content: space-around;
  direction: row;
  background-color: rgb(52, 212, 233);
}
.info text{
  font-size: 40rpx;
  color:white;
  line-height: 80rpx;
}

.wrap{
  margin: 0 16rpx;
  margin-bottom: 90rpx;
}

.bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width:100%;
  display: flex;
  flex-direction: row;
  background-color: #ff4713;
}
.bottom button{
  color:white;
  width:50%;
  background-color: #ff4713;
  font-size: 36rpx;
}
.navigator{
  color:white;
  width:50%;
  background-color: #ff4713;
  font-size:36rpx;
  text-align: center;
  line-height: 90rpx;
}
