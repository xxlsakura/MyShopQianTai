.top{
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #00ffff;
  position: fixed;
  border-bottom-right-radius: 16rpx;
  border-bottom-left-radius: 16rpx;
}
.search{
  display: flex;
  flex-direction: row;
  background-color: white;
  justify-content: center;
  border-radius: 24rpx;
  width: 96%;
  margin-bottom: 16rpx;
  margin-left: 16rpx;
}
.input{
  width:90%;
  font-size: 24rpx;
  line-height: 100%;
  margin-right: 6rpx;
}
.search image{
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  margin-top:10rpx;
}

.container{
  display: flex;
  flex-direction: column;
  padding: 0rpx 10rpx;
  height: 100%;
  background-color: #00ffff;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
  padding-top:50rpx;
}
swiper{
  width: 100%;
  height: 260rpx;
  padding-top:8rpx;
  padding-bottom: 6rpx;

}
swiper image{
  width: 100%;
  height: 258rpx;
  border-radius: 10rpx;
}
.nav{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #eee;
  border-radius: 10rpx;
  margin-bottom: 8rpx;
}
.nav .menu{
  display: flex;
  flex-direction: column;
  width: 25%;
  justify-content: center;
  align-items: center;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}
.menu text{
  font-size: 22rpx;
  color:#666;
  margin-top: 4rpx;
}
.menu image{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
}

.hot{
  display: block;
  text-align: center;
  margin:8rpx 0;
}
.wrap{
  display:flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color:#576b95;
  justify-content: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}
.wrap .product{
  display: flex;
  flex-direction: column;
  width: 47%;
  justify-content: center;
  align-items: center;
 
  margin: 6rpx 10rpx;
  background-color: #666;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}
.product image{
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  width:100%;
}
.info{
  padding: 0 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}
.name{
  color:white;
  font-size: 32rpx;
}
.info .price{
  color:red;
   font-size: 32rpx;
}