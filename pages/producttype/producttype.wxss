.wrap {
  background-color: #0ff;
  position: fixed;
  width: 100%;
  padding-bottom: 4rpx;
}

.search {
  display: flex;
  flex-direction: row;
  background-color: white;
  justify-content: center;
  border-radius: 24rpx;
  margin-bottom: 10rpx;
  margin-left: 12rpx;
  width: 97%;
}

.input {
  width: 90%;
  font-size: 24rpx;
  line-height: 100%;
  margin-right: 6rpx;
}

.search image {
  width: 30rpx;
  height: 30rpx;
  display: flex;
  justify-content: center;
  margin-top: 10rpx;
}

.container {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100%;
  padding-top: 66rpx;
}

.menu {
  display: flex;
  flex-direction: column;
  width: 20%;
  background-color: #259;
  text-align: center;
  color: white;
  font-size: 36rpx;
  min-height: 100%;
  position: fixed;
  margin-top: -10rpx;
}

.menu view {
  display: block;
  height: 60rpx;
}

.menu text {
  line-height: 60rpx;
}

.selected {
  border-left: 6rpx solid red;
  color: red;
  background-color: white;
}

.product {
  display: flex;
  flex-direction: column;
  width: 80%;
  margin-left: 140rpx;
}

.productlist {
  display: flex;
  flex-direction: row;
  margin-top: -6rpx;
}

.productlist image {
  width: 140rpx;
  height: 140rpx;
  margin-left: 16rpx;
  margin-bottom: 16rpx;
}

.product_info {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 30rpx;
  margin-left: 10rpx;
}
